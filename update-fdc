if ! ping -c 1 alm.innofriends.world &> /dev/null; then
  echo "The update server alm.innofriends.world is not reachable. Exiting!"
  exit 1
fi
cd /opt
echo "Stopping services"          
systemctl stop fdc-*                                                                                                                
rm -rf /opt/fdc                                                                                                                     
git clone --depth 1 https://fdc_deploy:glpat-XxipS7s1tnsnuLx9uyDu@alm.innofriends.world/firedamper/fdc/fdc-releases.git /opt/fdc
/bin/cp -rf /opt/fdc/fdc-mailer/lib* /lib/                                                                                          
rm -rf /opt/fdc/.git    
chown -R admin:admin /opt                                                                                                            
echo "Starting services"                                                                                                            
systemctl start fdc-application           
systemctl start fdc-mailer  
systemctl start fdc-webpage-backend
systemctl start fdc-bacnet
